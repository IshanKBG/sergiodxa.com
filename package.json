  "scripts": {
    "dev:app": "remix watch",
    "dev:css": "tailwindcss --output ./app/styles/tailwind.css --config ./config/tailwind.js --watch",
    "dev:http": "node ./server/build",
    "dev": "pm2-dev config/pm2.config.js",
    "build:app": "remix build",
    "build:css": "tailwindcss --output ./app/styles/tailwind.css --config ./config/tailwind.js --minify",
    "build": "npm run build:css && npm run build:app",
    "postbuild": "npm run db:migrate deploy",
    "start": "NODE_ENV=production node ./server/build/index.js",
    "db:migrate": "prisma migrate",
    "db:migrate:test": "DATABASE_URL=file:./test.db prisma migrate",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest"
  },
  "prisma": {
    "schema": "db/schema.prisma",
    "seed": "node --require tsconfig-paths/register db/seed.ts"
  },
  "eslintIgnore": [
    "/node_modules",
    "/server/build",
    "/public/build"
  ],
