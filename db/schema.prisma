// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AUTHOR
  READER
}

enum Visibility {
  PRIVATE
  PUBLIC
  DRAFT
}

enum ContentType {
  ARTICLE
  BOOKMARK
  THOUGHT
}

model User {
  id          String    @id @unique @default(cuid())
  role        Role      @default(READER)
  locale      String    @default("en")
  email       String    @unique
  displayName String
  avatar      String
  password    String?
  contents    Content[]
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
}

model Content {
  id           String      @id @unique @default(cuid())
  visibility   Visibility  @default(PRIVATE)
  lang         String      @default("en")
  slug         String      @unique
  type         ContentType
  title        String?
  headline     String?
  video        String?
  body         String?
  canonicalUrl String?
  author       User        @relation(fields: [userId], references: [id])
  userId       String
  parent       Content?    @relation("CommentOfContent", fields: [parentId], references: [id])
  parentId     String?
  comments     Content[]   @relation("CommentOfContent")
  updatedAt    DateTime    @updatedAt
  createdAt    DateTime    @default(now())
}
